#ifndef DISABLE_DEPRECATED

void LightmapGIData::_add_user_bind_compat_89919(const NodePath &p_path, const Rect2 &p_uv_scale, int p_slice_index, int32_t p_sub_instance) {
	Vector2 texture_size = light_texture.is_valid() ? Vector2(light_texture->get_width(), light_texture->get_height()) : Vector2(0, 0);

	add_user(p_path, p_uv_scale, p_slice_index, p_sub_instance, texture_size);
}

void LightmapGIData::_bind_compatibility_methods() {
	ClassDB::bind_compatibility_method(D_METHOD("add_user", "path", "uv_scale", "slice_index", "sub_instance"), &LightmapGIData::_add_user_bind_compat_89919);
}

#endif // DISABLE_DEPRECATED
